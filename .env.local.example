# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key

# Get this from https://dashboard.stripe.com/webhooks after creating your webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (JSON format)
# Create products in Stripe Dashboard, then add their price IDs here
# Example: {"starter":"price_xxx","pro":"price_xxx","enterprise":"price_xxx"}
# For free plans, omit the price ID from this object
STRIPE_PRICE_IDS={"pro":"price_your_pro_price_id"}

# SEO Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification-code